<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.project2aireline">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".CancelReservation"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".CancelReservationLogin" />
        <activity android:name=".ReserveSeatLoginActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".ReserveSeatActivity" />
        <activity android:name=".CreateFlightInfo" />
        <activity android:name=".AdminLogin" />
        <activity
            android:name=".ManageSystemActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".MainMenu"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>